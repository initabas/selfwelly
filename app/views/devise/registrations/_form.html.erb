<div class="col-sm-7 center-block line-left">
  <p class="heading-style center-block">Зарегистрироваться</p>
  <%= form_for("user", :url => user_registration_path, :remote => true, :html => {role: "form", :multipart => true, id: "sign-up"}, data: {:format => :json}) do |f| %>
    <div class="form-group">
      <%= f.label t(:email) %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label t(:name) %><br />
      <%= f.text_field :name, class: "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label t(:phone) %><br />
      <%= f.text_field :phone, class: "form-control" %>
      <span class="help-block"></span>
    </div>
    <div class="form-group">
      <%= f.label t(:password) %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      <span class="help-block"></span>
    </div>

    <div class="form-group">
      <%= f.label t(:password_confirmation) %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      <span class="help-block"></span>
    </div>

  <div>
    <%= f.submit "#{t(:sign_up)}", class: "btn btn-success" %>
  </div>
  <% end %>
</div>